{
    "expo": {
        "name": "The_Contactor",
        "slug": "The_Contactor",
        "version": "1.0.0",
        "orientation": "portrait",
        "scheme": "thecontactor",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true,
            "infoPlist": {
                "NSContactsUsageDescription": "This app requires access to your contacts."
            }
        },
        "android": {
            "adaptiveIcon": {
                "backgroundColor": "#E6F4FE"
            },
            "edgeToEdgeEnabled": true,
            "predictiveBackGestureEnabled": false,
            "permissions": ["READ_CONTACTS"]
        },
        "web": {
            "output": "static"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/splash-icon.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#ffffff",
                    "dark": {
                        "backgroundColor": "#000000"
                    }
                }
            ],
            [
                "expo-contacts",
                {
                    "contactsPermission": "Allow $(PRODUCT_NAME) to access your contacts."
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true,
            "reactCompiler": true
        }
    }
}
